<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="awesome_owl.todo_list">
    <div class="border m-2 p-3 d-inline-block">
      <input type="text" placeholder="Enter a new task" class="form-control mb-3" t-on-keyup="addTodo" t-ref="input"/>
      <t t-foreach="todos" t-as="todo" t-key="todo.id">
        <TodoItem todo="todo"/>
      </t>
    </div>
  </t>
</templates>